# ============================================
# CONFIGURACIÓN DE GOOGLE CLOUD STORAGE
# ============================================

# ID del proyecto de Google Cloud Platform
GCP_PROJECT_ID=tu-proyecto-gcp-id

# Ruta al archivo de credenciales JSON de GCP
# Descarga este archivo desde la consola de GCP > IAM & Admin > Service Accounts
GCP_KEY_FILENAME=./credentials/gcp-service-account.json

# Nombre del bucket de Google Cloud Storage
GCP_BUCKET_NAME=sunat-facturas-bucket

# ============================================
# CONFIGURACIÓN DE SUNAT
# ============================================

# Credenciales de SUNAT (opcional, se pueden hardcodear en el código)
SUNAT_USERNAME=tu-usuario-sunat
SUNAT_PASSWORD=tu-password-sunat

# ============================================
# CONFIGURACIÓN DE PLAYWRIGHT
# ============================================

# Modo headless (true/false)
PLAYWRIGHT_HEADLESS=true

# Timeout para elementos (milisegundos)
PLAYWRIGHT_TIMEOUT=30000

# ============================================
# CONFIGURACIÓN DE DESCARGA
# ============================================

# Directorio para archivos temporales
DOWNLOAD_DIR=./downloads

# Tamaño máximo de archivo (bytes)
MAX_FILE_SIZE=10485760

# ============================================
# CONFIGURACIÓN DE LOGGING
# ============================================

# Nivel de logging (debug, info, warn, error)
LOG_LEVEL=info

# Archivo de log
LOG_FILE=./logs/sunat-bot.log

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS (opcional)
# ============================================

# URL de conexión a base de datos
DATABASE_URL=postgresql://usuario:password@localhost:5432/sunat_facturas

# ============================================
# CONFIGURACIÓN DE NOTIFICACIONES (opcional)
# ============================================

# Webhook para notificaciones
WEBHOOK_URL=https://hooks.slack.com/services/tu/webhook/url

# Email para notificaciones
NOTIFICATION_EMAIL=admin@tudominio.com
